<resources>
    <declare-styleable name="PinView">
        <!--Title text-->
        <attr name="pin_titleText" format="string"/>
        <attr name="pin_titleTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PasscodeView">
        <attr name="giveTactileFeedback" format="boolean"/>

        <!--Fingerprint-->
        <attr name="fingerprintEnable" format="boolean" />
        <attr name="fingerprintDefaultText" format="string" />
        <attr name="fingerprintTextColor" format="color" />
        <attr name="fingerprintTextSize" format="dimension" />

        <!--Horizontal divider-->
        <attr name="dividerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PatternView">
        <!--Title text-->
        <attr name="titleText" format="string"/>
        <attr name="titleTextColor" format="color"/>

        <attr name="noOfColumns" format="integer"/>
        <attr name="noOfRows" format="integer"/>

        <attr name="patternLineColor" format="color"/>
    </declare-styleable>
</resources>